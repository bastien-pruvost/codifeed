{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "api/Dockerfile",
        "watchPatterns": ["api/**"]
    },
    "deploy": {
        "healthcheckPath": "/healthcheck",
        "healthcheckTimeout": 120,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}
